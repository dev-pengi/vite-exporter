{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"],
    "target": "ES2015",
    "noUnusedLocals": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "Node16",
    "moduleResolution": "node16",
    "declarationDir": "./dist/types",
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src"],
  "exclude": ["**node_modules", "dist"]
}

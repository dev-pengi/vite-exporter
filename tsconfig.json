{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"],
    "target": "es2020",
    "moduleResolution": "bundler",
    "noUnusedLocals": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "isolatedModules": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
